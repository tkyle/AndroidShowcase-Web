@using AndroidShowcase.Business.Entities
@model Product

<tr data-productid=@Model.ProductId data-userid="@Model.UserId">
   <td>@Model.Name</td>
   <td>@Model.Description</td>
   <td>@Model.Cost</td>
   <td>
       <button data-role="edit" data-toggle="modal" data-target="#productDialog" class="btn btn-sm btn-warning hidden-xs">Edit</button>    
   </td>
   <td>
        <button data-role="delete" class="btn btn-sm btn-link hidden-xs">Delete</button> 
   </td>
</tr>

